<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

        <!--Available level: all, trace, debug, info, warn, error, fatal, off -->

        <!--Main-->
        <logger name="org.dapnet.core.DAPNetCore" level="info"/>
        <logger name="org.dapnet.core.Scheduler" level="info"/>

        <!--Transmission-->
        <logger name="org.dapnet.core.transmission.TransmissionManager" level="info"/>
        <logger name="org.dapnet.core.transmission.TransmitterDeviceManager" level="info"/>

        <logger name="org.dapnet.core.transmission.TransmitterDevice" level="warn"/>
        <logger name="org.dapnet.core.transmission.Raspager1" level="info"/>

        <!--Cluster-->
        <logger name="org.dapnet.core.cluster.ChannelListener" level="info"/>
        <logger name="org.dapnet.core.cluster.ClusterAuthentication" level="info"/>
        <logger name="org.dapnet.core.cluster.ClusterManager" level="info"/>
        <logger name="org.dapnet.core.cluster.MembershipListener" level="info"/>
        <logger name="org.dapnet.core.cluster.MessageListener" level="info"/>
        <logger name="org.dapnet.core.cluster.RpcListener" level="info"/>

        <!--JGroups-->
        <logger name="org.jgroups.protocols" level="error"/>

        <!--REST-->
        <logger name="org.dapnet.core.rest.resources.AbstractResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.CallResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.CallSignResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.NewsResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.NodeResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.RubricResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.TransmitterGroupResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.TransmitterResource" level="warn"/>
        <logger name="org.dapnet.core.rest.resources.UserResource" level="warn"/>

        <logger name="org.dapnet.core.rest.RestManager" level="info"/>
        <logger name="org.dapnet.core.rest.RestSecurity" level="error"/>

    </Loggers>
</Configuration>